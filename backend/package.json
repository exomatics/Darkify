{
  "name": "darkify-backend",
  "version": "0.0.1",
  "private": true,
  "main": "app.ts",
  "type": "module",
  "scripts": {
    "dev": "node --watch --env-file=.env --loader ts-node/esm --no-warnings=ExperimentalWarning ./src/app.ts",
    "start": "node --env-file=.env --loader ts-node/esm --no-warnings=ExperimentalWarning ./src/app.ts",
    "generate:keys": "node --loader ts-node/esm --no-warnings=ExperimentalWarning ./src/config/create-key-pair.ts",
    "start:full": "pnpm run generate:keys && pnpm run start",
    "dev:full": "pnpm run generate:keys && pnpm run dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "tsc",
    "test:typescript": "tsc --noEmit",
    "prettier:fix": "prettier . --write",
    "prettier:test": "prettier . --check",
    "preinstall": "npx only-allow pnpm"
  },
  "packageManager": "pnpm@10.8.1",
  "author": "Miroshnichenko Roman <rborisovic74@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/express-serve-static-core": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/passport-strategy": "^0.2.38",
    "@types/sequelize": "^4.28.20",
    "@types/swagger-ui-express": "^4.1.8",
    "cors": "^2.8.5",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import-x": "^4.15.2",
    "express": "^5.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "1.4.5-lts.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sharp": "^0.34.2",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "yaml": "^2.8.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@tsconfig/node23": "^23.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-serve-static-core": "^5.0.6",
    "@types/multer": "^1.4.13",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "eslint": "^9.29.0",
    "eslint-plugin-github": "^5.1.8",
    "eslint-plugin-no-loops": "^0.4.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-unicorn": "^56.0.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.15.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  }
}
