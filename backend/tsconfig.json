{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "Node16",
    "noEmit": true,
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "allowImportingTsExtensions": true,
    "noImplicitAny": true
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["./src/**/*"]
}
